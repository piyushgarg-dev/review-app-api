{
  "name": "review-app-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:piyushgarg-dev/review-app-api.git",
  "author": "Piyush Garg <piyushgarg.dev@gmail.com>",
  "scripts": {
    "local": "dotenv -c development -- npm run prisma:generate && concurrently \"serverless offline --stage development --disableCookieValidation\"",
    "migrate:latest": "dotenv -c development -- prisma migrate deploy",
    "prisma:migrate:local": "dotenv -c development -- prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "dotenv -c development -- prisma studio",
    "lint": "eslint .",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "deploy:prod": "dotenv -c production -- sh scripts/deploy.sh production"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.2.1",
    "esbuild": "^0.19.1",
    "eslint": "^8.51.0",
    "prisma": "^5.1.1",
    "serverless": "^3.34.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.46.0",
    "serverless-offline": "^12.0.4",
    "serverless-prune-plugin": "^2.0.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@as-integrations/aws-lambda": "^3.1.0",
    "@prisma/client": "5.1.1",
    "graphql": "^16.8.0",
    "jsonwebtoken": "^9.0.1",
    "nanoid": "^4.0.2",
    "slugify": "^1.6.6"
  }
}
